<?xml version="1.0" encoding="UTF-8"?>

<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="product.info.details">
                <block class="Dovhan\Tab\Block\ExtraInfo" name="tab.custom"
                       template="Dovhan_Tab::kit.phtml" group="detailed_info">
                    <arguments>
                        <argument translate="true" name="title" xsi:type="string">Product variables</argument>
                        <argument name="sort_order" xsi:type="const">Dovhan\Tab\Block\ExtraInfo::DEFAULT_SORT</argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>